{deps, [{hackney, ".*", {git, "https://github.com/benoitc/hackney.git", {tag, "1.6.3"}}},
        {gpb, ".*", {git, "https://github.com/tomas-abrahamsson/gpb.git", {tag, "3.26.5"}}}]}.

{pre_hooks, [%% Scheduler.
             {compile, "$(pwd)/../gpb/bin/protoc-erl -I$(pwd)/proto "
                       "-il -o-erl src -o-hrl include "
                       "-modprefix erl_mesos_ -modsuffix _proto "
                       "$(pwd)/proto/mesos/v1/scheduler/scheduler.proto"},
             %% Executor.
             {compile, "$(pwd)/../gpb/bin/protoc-erl -I$(pwd)/proto "
                       "-il -o-erl src -o-hrl include "
                       "-modprefix erl_mesos_ -modsuffix _proto "
                       "$(pwd)/proto/mesos/v1/executor/executor.proto"}
             ]}.
